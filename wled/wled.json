{
  "meta": {"version": "0.0.6", "start":"program"},
  "program": ["PROGRAM","ID","block"],
  "block" : ["LCURL",{"*": ["statement"]},"RCURL"],
  "statement" : {"|":["variable","assign","function","call","for", "if","block"]},
  "variable" : ["VAR", "ID"],
  "assign" : ["varleft", {"?": ["LBRACKET", "indices", "RBRACKET"]}, "ASSIGN", "expr"],
  "indices" : ["expr", {"*": ["COMMA", "expr"]}],
  "function" : ["FUNCTION", "ID", {"?": ["LPAREN", "formals", "RPAREN"]}, "block"],
  "formals" : {"?":["formal",{"*":["COMMA","formal"]}]},
  "formal" : "ID",
  "call" : ["ID", "LPAREN", "actuals", "RPAREN"],
  "actuals": {"?": ["expr", {"*": ["COMMA", "expr"]}]},
  "for": ["FOR", "LPAREN", "assign", "SEMI", "expr", "SEMI", "increment", "RPAREN", "block"],
  "increment": ["assign"],
  "if": ["IF", "LPAREN", "expr", "RPAREN", "block", {"?":["ELSE", "elseBlock"]}],
  "elseBlock": ["block"],
  "expr" : [ "term", {"*": [{"|": ["PLUS", "MINUS", "EQ", "LT", "LTE", "GT", "GTE"]}, "term"]}],
  "term" : [ "factor", {"*": [{"|": ["MUL", "DIV", "MOD", "BSHIFTL", "BSHIFTR"]}, "factor"]}],
  "factor" : {"|": ["call", "varref", "INTEGER_CONST", "REAL_CONST", ["LPAREN", "expr", "RPAREN"]]},
  "varref": "ID",
  "varleft": "ID",

  "TOKENS":
  {
    "ID": "ID",
    "INTEGER_CONST": "INTEGER_CONST",
    "REAL_CONST": "REAL_CONST",
    "PLUS": "+",
    "MINUS": "-",
    "MUL": "*",
    "DIV": "/",
    "MOD": "%",
    "BSHIFTL": "<<",
    "BSHIFTR": ">>",
    "LPAREN": "(",
    "RPAREN": ")",
    "LBRACKET": "[",
    "RBRACKET": "]",
    "COMMA": ",",
    "EQ": "==",
    "NEQ": "!=",
    "LT": "<",
    "LTE": "<=",
    "GT": ">",
    "GTE": ">=",
    "SEMI": ";",
    "ASSIGN": "=",

    "PROGRAM": "PROGRAM",
    "INTEGER": "INTEGER",
    "REAL": "REAL",
    "VAR": "VAR",
    "FUNCTION": "FUNCTION",
    "LCURL": "{",
    "RCURL": "}",
    "FOR": "FOR",
    "TO": "TO",
    "DO": "DO",
    "IF": "IF",
    "ELSE": "ELSE"
  },

  "SEMANTICS":
  {
    "program": {"id":"Program", "name":"ID", "block": "block"},
    "function": {"id":"Function", "name":"ID", "formals": "formals", "block": "block"},
    "call": {"id":"Call", "name":"ID", "actuals": "actuals"},
    "variable": {"id":"Var", "name":"ID", "type": "type"},
    "assign": {"id":"Assign", "name":"varleft", "indices":"indices", "value":"expr"},
    "formal": {"id":"Formal", "name":"ID", "type": "type"},
    "varref": {"id":"VarRef", "name":"ID"},
    "for": {"id":"For", "from":"assign", "condition":"expr", "increment": "increment", "block":"block"},
    "if": {"id":"If", "condition":"expr", "true":"block", "false": "elseBlock"},
    "expr": {"id":"Expr"},
    "term": {"id":"Term"}
  },

  "EXTERNALS":
  {
    "setPixelColor": {"pixelNr":"int", "color":"int"},
    "random": {"return": "int"},
    "printf": {"args": "__VA_ARGS__"},
    "ledCount": {},
    "shift": {"delta": "int"},
    "sin": {"degrees": "real"},
    "millis": {},
    "abs": {"value": "real"},
    "setPixels": {"leds": "array"},
    "leds": {},
    "hsv": {"h":"uint8", "s":"uint8", "v":"uint8"},
    "sampleAvg": {"return": "double"},
    "speed": {"return":"uint8"},
    "constrain": {"amt":"any", "low":"any", "high":"any"},
    "fill": {"color":"uint32"},
    "blend": {"color1":"uint32", "color2":"uint32", "blend":"uint16"},
    "segcolor": {"index":"uint8"},
    "wheel": {"pos":"uint8"},
    "hour": {"return":"uint8"},
    "minute": {"return":"uint8"},
    "second": {"return":"uint8"},
    "setRange": {"from":"uint16", "to":"uint16", "color":"uint32"},
    "": {}
  }

}
